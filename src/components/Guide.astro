---
// Guide Component - Epistemic companion for Configuration Economics
// Implements the layered presence: indicator → panel → conversation
---

<div id="guide-container" class="guide-container">
  <!-- Level 1: Presence Indicator -->
  <button id="guide-trigger" class="guide-trigger" aria-label="Open Guide">
    <span class="guide-dot"></span>
  </button>

  <!-- Level 2: Guide Panel -->
  <div id="guide-panel" class="guide-panel" aria-hidden="true">
    <header class="guide-header">
      <div class="guide-presence-row">
        <span class="guide-dot active"></span>
        <span class="guide-title">Guide</span>
      </div>
      <button id="guide-close" class="guide-close" aria-label="Close Guide">×</button>
    </header>

    <div class="guide-context">
      <div class="context-item">
        <span class="context-label">Currently Reading</span>
        <span id="guide-section" class="context-value">Configuration Economics</span>
      </div>
      <div class="context-item">
        <span class="context-label">Section Status</span>
        <span id="guide-status" class="context-value status-established">Overview</span>
      </div>
    </div>

    <div id="guide-messages" class="guide-messages">
      <div class="guide-welcome">
        <p>I'm here to help you navigate this work. I can:</p>
        <ul>
          <li>Explain concepts at your level</li>
          <li>Show connections between ideas</li>
          <li>Surface what's established vs. open</li>
          <li>Answer questions about the framework</li>
        </ul>
      </div>
    </div>

    <div class="guide-suggestions" id="guide-suggestions">
      <button class="suggestion" data-query="What is Configuration Economics about?">What is this about?</button>
      <button class="suggestion" data-query="Explain the core value definition simply">Explain simply</button>
      <button class="suggestion" data-query="What are the strongest objections to this framework?">What's contested?</button>
      <button class="suggestion" data-query="How does energy income differ from energy savings?">Key distinctions</button>
    </div>

    <form id="guide-form" class="guide-input-form">
      <input
        type="text"
        id="guide-input"
        class="guide-input"
        placeholder="Ask a question..."
        autocomplete="off"
      />
      <button type="submit" class="guide-submit" aria-label="Send">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
        </svg>
      </button>
    </form>
  </div>
</div>

<style>
  .guide-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 1000;
    font-family: 'Sora', system-ui, sans-serif;
  }

  /* Trigger Button */
  .guide-trigger {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 1px solid var(--guide-border, rgba(255,255,255,0.1));
    background: var(--guide-bg, #12121a);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .guide-trigger:hover {
    transform: scale(1.05);
    border-color: var(--guide-accent, #4a9eff);
  }

  .guide-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--guide-accent, #4a9eff);
    animation: pulse 2s ease-in-out infinite;
  }

  .guide-dot.active {
    width: 8px;
    height: 8px;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.1); }
  }

  /* Panel */
  .guide-panel {
    position: absolute;
    bottom: 60px;
    right: 0;
    width: 380px;
    max-height: 70vh;
    background: var(--guide-bg, #12121a);
    border: 1px solid var(--guide-border, rgba(255,255,255,0.1));
    border-radius: 12px;
    display: none;
    flex-direction: column;
    box-shadow: 0 10px 40px rgba(0,0,0,0.4);
    overflow: hidden;
  }

  .guide-panel.open {
    display: flex;
    animation: slideUp 0.3s ease;
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Header */
  .guide-header {
    padding: 12px 16px;
    border-bottom: 1px solid var(--guide-border, rgba(255,255,255,0.1));
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .guide-presence-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .guide-title {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--guide-muted, #606080);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .guide-close {
    background: none;
    border: none;
    color: var(--guide-muted, #606080);
    font-size: 1.25rem;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .guide-close:hover {
    background: var(--guide-border, rgba(255,255,255,0.1));
    color: var(--guide-text, #e8e8f0);
  }

  /* Context */
  .guide-context {
    padding: 12px 16px;
    border-bottom: 1px solid var(--guide-border, rgba(255,255,255,0.05));
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .context-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .context-label {
    font-size: 0.625rem;
    color: var(--guide-muted, #606080);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .context-value {
    font-size: 0.8125rem;
    color: var(--guide-text-secondary, #a0a0b8);
  }

  .status-established { color: #4a9eff; }
  .status-derived { color: #4affb8; }
  .status-contested { color: #ff9f4a; }
  .status-open { color: #9f4aff; }

  /* Messages */
  .guide-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    min-height: 150px;
    max-height: 300px;
  }

  .guide-welcome {
    font-size: 0.875rem;
    color: var(--guide-text-secondary, #a0a0b8);
    line-height: 1.6;
  }

  .guide-welcome ul {
    margin: 8px 0 0 0;
    padding-left: 20px;
  }

  .guide-welcome li {
    margin-bottom: 4px;
  }

  .message {
    padding: 10px 14px;
    border-radius: 8px;
    font-size: 0.875rem;
    line-height: 1.6;
    max-width: 90%;
  }

  .message.user {
    background: var(--guide-accent, #4a9eff);
    color: white;
    align-self: flex-end;
    border-bottom-right-radius: 4px;
  }

  .message.assistant {
    background: var(--guide-border, rgba(255,255,255,0.08));
    color: var(--guide-text, #e8e8f0);
    align-self: flex-start;
    border-bottom-left-radius: 4px;
  }

  .message.loading {
    color: var(--guide-muted, #606080);
    font-style: italic;
  }

  .message.error {
    background: rgba(255, 100, 100, 0.1);
    color: #ff6b6b;
  }

  /* Suggestions */
  .guide-suggestions {
    padding: 12px 16px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    border-top: 1px solid var(--guide-border, rgba(255,255,255,0.05));
  }

  .suggestion {
    font-size: 0.75rem;
    padding: 6px 12px;
    border-radius: 16px;
    border: 1px solid var(--guide-border, rgba(255,255,255,0.1));
    background: transparent;
    color: var(--guide-text-secondary, #a0a0b8);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .suggestion:hover {
    border-color: var(--guide-accent, #4a9eff);
    color: var(--guide-text, #e8e8f0);
  }

  .guide-suggestions.hidden {
    display: none;
  }

  /* Input */
  .guide-input-form {
    padding: 12px 16px;
    border-top: 1px solid var(--guide-border, rgba(255,255,255,0.1));
    display: flex;
    gap: 8px;
  }

  .guide-input {
    flex: 1;
    padding: 10px 14px;
    border-radius: 8px;
    border: 1px solid var(--guide-border, rgba(255,255,255,0.1));
    background: var(--guide-input-bg, rgba(255,255,255,0.05));
    color: var(--guide-text, #e8e8f0);
    font-size: 0.875rem;
    font-family: inherit;
    outline: none;
    transition: border-color 0.2s ease;
  }

  .guide-input::placeholder {
    color: var(--guide-muted, #606080);
  }

  .guide-input:focus {
    border-color: var(--guide-accent, #4a9eff);
  }

  .guide-submit {
    padding: 10px 12px;
    border-radius: 8px;
    border: none;
    background: var(--guide-accent, #4a9eff);
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .guide-submit:hover {
    opacity: 0.9;
    transform: scale(1.02);
  }

  .guide-submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Light mode overrides */
  :global(.light-mode) .guide-container {
    --guide-bg: #fffefa;
    --guide-border: rgba(0,0,0,0.08);
    --guide-text: #1a1816;
    --guide-text-secondary: #3d3835;
    --guide-muted: #6b6460;
    --guide-accent: #2563a8;
    --guide-input-bg: rgba(0,0,0,0.03);
  }

  /* Responsive */
  @media (max-width: 480px) {
    .guide-container {
      bottom: 16px;
      right: 16px;
    }

    .guide-panel {
      width: calc(100vw - 32px);
      max-width: 380px;
    }
  }
</style>

<script>
  // Guide functionality
  document.addEventListener('DOMContentLoaded', () => {
    const trigger = document.getElementById('guide-trigger');
    const panel = document.getElementById('guide-panel');
    const closeBtn = document.getElementById('guide-close');
    const form = document.getElementById('guide-form');
    const input = document.getElementById('guide-input');
    const messagesContainer = document.getElementById('guide-messages');
    const suggestionsContainer = document.getElementById('guide-suggestions');
    const suggestions = document.querySelectorAll('.suggestion');

    let conversationHistory: Array<{role: 'user' | 'assistant', content: string}> = [];
    let isLoading = false;

    // Get current section from page
    function getCurrentContext() {
      const section = document.querySelector('[data-section]')?.getAttribute('data-section') || 'Overview';
      const status = document.querySelector('[data-epistemic-status]')?.getAttribute('data-epistemic-status') || 'established';
      return { section, status };
    }

    // Toggle panel
    trigger?.addEventListener('click', () => {
      panel?.classList.toggle('open');
      if (panel?.classList.contains('open')) {
        input?.focus();
      }
    });

    closeBtn?.addEventListener('click', () => {
      panel?.classList.remove('open');
    });

    // Click outside to close
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (!target.closest('#guide-container') && panel?.classList.contains('open')) {
        panel?.classList.remove('open');
      }
    });

    // Handle suggestions
    suggestions.forEach(btn => {
      btn.addEventListener('click', () => {
        const query = btn.getAttribute('data-query');
        if (query) {
          sendMessage(query);
        }
      });
    });

    // Handle form submit
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      const message = input?.value.trim();
      if (message && !isLoading) {
        sendMessage(message);
        if (input) input.value = '';
      }
    });

    // Send message to API
    async function sendMessage(message: string) {
      if (isLoading) return;
      isLoading = true;

      // Hide welcome and suggestions after first message
      const welcome = messagesContainer?.querySelector('.guide-welcome');
      if (welcome) welcome.remove();
      suggestionsContainer?.classList.add('hidden');

      // Add user message
      addMessage(message, 'user');

      // Add loading indicator
      const loadingEl = addMessage('Thinking...', 'assistant loading');

      const context = getCurrentContext();

      try {
        const response = await fetch('/api/guide', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            message,
            history: conversationHistory,
            context: {
              currentSection: context.section,
              epistemicStatus: context.status
            }
          })
        });

        if (!response.ok) throw new Error('Guide unavailable');

        const data = await response.json();

        // Remove loading indicator
        loadingEl?.remove();

        // Add assistant response
        addMessage(data.message, 'assistant');

        // Update history
        conversationHistory.push(
          { role: 'user', content: message },
          { role: 'assistant', content: data.message }
        );

        // Keep history manageable
        if (conversationHistory.length > 10) {
          conversationHistory = conversationHistory.slice(-10);
        }

      } catch (error) {
        loadingEl?.remove();
        addMessage('I apologize, but I\'m having trouble connecting. Please try again.', 'assistant error');
      }

      isLoading = false;
    }

    // Add message to UI
    function addMessage(text: string, className: string): HTMLElement | null {
      const el = document.createElement('div');
      el.className = `message ${className}`;
      el.textContent = text;
      messagesContainer?.appendChild(el);
      messagesContainer?.scrollTo(0, messagesContainer.scrollHeight);
      return el;
    }
  });
</script>
