---
// Explore: Proposition Nodes
// Text-first, calm, invitational

import { PROPOSITIONS, getLinkedPropositions } from '../content/propositions';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Propositions â€” Configuration Economics</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;1,400&family=Sora:wght@300;400;500&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="top-nav">
      <a href="/" class="nav-home">Configuration Economics</a>
      <a href="/essay" class="nav-link">Essay</a>
    </nav>

    <main>
      <header class="page-header">
        <h1>Propositions</h1>
        <p class="subtitle">Each node is self-contained and meaningful in isolation.</p>
        <p class="note">Logic is present but not foregrounded. Expand to see the underlying structure.</p>
      </header>

      <div class="propositions">
        {PROPOSITIONS.map(prop => {
          const linked = getLinkedPropositions(prop.id);
          return (
            <article class="proposition" id={prop.id}>
              <h2>{prop.title}</h2>

              <div class="surface">
                {prop.surface.split('\n\n').map(para => (
                  <p>{para}</p>
                ))}
              </div>

              <details class="logic">
                <summary>Underlying logic</summary>
                <div class="logic-content">
                  <div class="claim">
                    <span class="label">Claim</span>
                    <p>{prop.logic.claim}</p>
                  </div>

                  <div class="premises">
                    <span class="label">Premises</span>
                    <ol>
                      {prop.logic.premises.map(p => <li>{p}</li>)}
                    </ol>
                  </div>

                  <div class="conclusion">
                    <span class="label">Conclusion</span>
                    <p>{prop.logic.conclusion}</p>
                  </div>

                  {prop.logic.predictive && (
                    <div class="predictive">
                      <span class="label">Predictive consequence</span>
                      <p>{prop.logic.predictive}</p>
                    </div>
                  )}
                </div>
              </details>

              {linked.length > 0 && (
                <div class="links">
                  <span class="links-label">Links to:</span>
                  {linked.map(l => (
                    <a href={`#${l.id}`} class="link">{l.title}</a>
                  ))}
                </div>
              )}
            </article>
          );
        })}
      </div>
    </main>

    <style>
      :root {
        --void: #0a0a0c;
        --depth-1: #12121a;
        --depth-2: #1a1a24;
        --text-primary: #e8e8f0;
        --text-secondary: #a0a0b8;
        --text-muted: #606080;
        --accent: #4a9eff;
        --font-display: 'Cormorant Garamond', serif;
        --font-body: 'Sora', sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: var(--font-body);
        background: var(--void);
        color: var(--text-primary);
        min-height: 100vh;
        line-height: 1.7;
      }

      .top-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 56px;
        background: rgba(10, 10, 12, 0.95);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255,255,255,0.06);
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 0 2rem;
        z-index: 100;
      }

      .nav-home {
        font-family: var(--font-display);
        font-size: 1.125rem;
        color: var(--text-primary);
        text-decoration: none;
      }

      .nav-link {
        font-size: 0.875rem;
        color: var(--text-secondary);
        text-decoration: none;
      }

      .nav-link:hover {
        color: var(--accent);
      }

      main {
        max-width: 720px;
        margin: 0 auto;
        padding: 100px 2rem 6rem;
      }

      .page-header {
        margin-bottom: 4rem;
      }

      .page-header h1 {
        font-family: var(--font-display);
        font-size: 2.25rem;
        font-weight: 400;
        margin-bottom: 0.75rem;
      }

      .subtitle {
        color: var(--text-secondary);
        font-size: 1rem;
        margin-bottom: 0.5rem;
      }

      .note {
        color: var(--text-muted);
        font-size: 0.875rem;
      }

      /* Propositions */
      .propositions {
        display: flex;
        flex-direction: column;
        gap: 4rem;
      }

      .proposition {
        scroll-margin-top: 80px;
      }

      .proposition h2 {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
      }

      .surface {
        margin-bottom: 1.5rem;
      }

      .surface p {
        color: var(--text-secondary);
        font-size: 1rem;
        margin-bottom: 1rem;
        line-height: 1.8;
      }

      .surface p:last-child {
        margin-bottom: 0;
      }

      /* Logic section */
      .logic {
        margin-bottom: 1.5rem;
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 6px;
        background: rgba(255,255,255,0.02);
      }

      .logic summary {
        padding: 0.75rem 1rem;
        font-family: var(--font-mono);
        font-size: 0.75rem;
        color: var(--text-muted);
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .logic summary:hover {
        color: var(--text-secondary);
      }

      .logic[open] summary {
        border-bottom: 1px solid rgba(255,255,255,0.06);
      }

      .logic-content {
        padding: 1.25rem;
      }

      .logic-content .label {
        display: block;
        font-family: var(--font-mono);
        font-size: 0.6875rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        margin-bottom: 0.5rem;
      }

      .logic-content > div {
        margin-bottom: 1.25rem;
      }

      .logic-content > div:last-child {
        margin-bottom: 0;
      }

      .logic-content p {
        color: var(--text-secondary);
        font-size: 0.9375rem;
        line-height: 1.6;
      }

      .logic-content ol {
        padding-left: 1.25rem;
        color: var(--text-secondary);
        font-size: 0.9375rem;
        line-height: 1.6;
      }

      .logic-content li {
        margin-bottom: 0.375rem;
      }

      .claim p {
        color: var(--text-primary);
        font-weight: 400;
      }

      .conclusion p {
        border-left: 2px solid var(--accent);
        padding-left: 1rem;
      }

      .predictive p {
        font-style: italic;
        color: var(--text-muted);
      }

      /* Links */
      .links {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex-wrap: wrap;
      }

      .links-label {
        font-family: var(--font-mono);
        font-size: 0.6875rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .link {
        font-size: 0.8125rem;
        color: var(--accent);
        text-decoration: none;
        padding: 0.25rem 0.5rem;
        border: 1px solid rgba(74, 158, 255, 0.3);
        border-radius: 4px;
        transition: all 0.15s ease;
      }

      .link:hover {
        background: rgba(74, 158, 255, 0.1);
        border-color: var(--accent);
      }

      /* Highlight animation for linked propositions */
      .proposition:target {
        animation: highlight 2s ease-out;
      }

      @keyframes highlight {
        0% { background: rgba(74, 158, 255, 0.15); }
        100% { background: transparent; }
      }

      @media (max-width: 600px) {
        main {
          padding: 80px 1.25rem 4rem;
        }

        .page-header h1 {
          font-size: 1.75rem;
        }

        .proposition h2 {
          font-size: 1.25rem;
        }
      }
    </style>
  </body>
</html>
